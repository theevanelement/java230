    public static void main(String[] args) {
        // TODO code application logic here
        System.out.println("Type your name.");
        System.out.println("Type your weight in lbs");
        System.out.println("Type your Height in feet and inches");
        System.out.println("Type your age");
    
        double personName;
        int personWeight, personHeight, personAge;
        double menBmr, womenBmr;
        int chocolateBar;
        Scanner keyboard = new Scanner(System.in);
        personName = keyboard.nextInt();
        personWeight = keyboard.nextInt();
        personHeight = keyboard.nextInt();
        personAge = keyboard.nextInt();
        
        menBmr = 66 + (6.3 * personWeight) + (12.9 * personHeight)-(6.8 * personAge);
        womenBmr = 655 + (4.3 * personWeight) + (4.7 * personHeight)-(4.7 * personAge);
        chocolateBar = 230;
        
        
    }
