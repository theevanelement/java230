        // TODO code application logic here
    double RATE = 0.0449;
    int payment;
    Scanner keyboard = new Scanner(System.in);
    System.out.println("Enter this month's payment:(Whole dollars)");
    payment = keyboard.nextInt();
    System.out.println ("Enter the principal owed:(Whole dollars)");
                int oldPrinciple = keyboard.nextInt();
                
                int interestAmount = (int) ((RATE/12) * payment);
                
                int toPrinciple = interestAmount - payment;
                
                int newPrinciple = oldPrinciple - toPrinciple;
                
                System.out.println("Previous Balance: " + oldPrinciple); 
                System.out.println("Payment: " + payment); 
                System.out.println("Interest Paid: " + interestAmount); 
                System.out.println("Amount applied to principle: " + toPrinciple); 
                System.out.println("New Balance: " + newPrinciple); 

    }
}


